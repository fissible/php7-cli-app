{
    "name": "ajthenewguy/php-cli",
    "description": "A generic CLI library for creating command line interface programs.",
    "type": "library",
    "require-dev": {
        "phpunit/phpunit": "^9.4@dev",
        "phpstan/phpstan": "^0.12.0@dev",
        "ramsey/composer-repl": "1.x-dev"
    },
    "authors": [
        {
            "name": "Allen McCabe",
            "email": "allenmccabe@gmail.com"
        }
    ],
    "autoload": {
        "files": [
            "src/functions.php"
        ],
        "psr-4": {
            "PhpCli\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "require": {
        "nesbot/carbon": "^2.0@dev",
        "seld/cli-prompt": "^1.0@dev"
    },
    "scripts": {
        "phpunit": "vendor/phpunit/phpunit/phpunit"
    }
}
